
<FirstScreen>:
    Screen:
        name: "Menu 1"
        BoxLayout:
            orientation: 'vertical'
            ToggleButton:
                text:"Continue previous test run"
                size_hint: 0.5, 0.2
                pos_hint:{"center_x":0.5,"center_y":0.5}
                group: "a1"
                id: continue
                state: "down"

            ToggleButton:
                text:"Start a new test run"
                size_hint: 0.5, 0.2
                pos_hint:{"center_x":0.5,"center_y":0.5}
                group: "a1"
                id: new

            Button:
                text: "Start"
                size_hint: 0.5, 0.5
                pos_hint:{"center_x":0.5,"center_y":0.5}

                on_press: root.manager.current = "Screen 1"

