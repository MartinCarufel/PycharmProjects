TopGrid:



<TopGrid>:
    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 20, 20

        GridLayout:
            cols: 2
            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline: False
            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline: False
        AnchorLayout:
            size_hint: None, 0.1
            size: root.width, root.height

            Button:
                text: "Submit"
                font_size: 32
                size_hint: None, None
                size: 150, 50
                pos_hint: {'x':0.25, 'y': 0.5}
            Button:
                text: "Cancel"
                font_size: 32
                size_hint: None, None
                size: 150, 50
                pos_hint: {'x':0.75, 'y': 0.5}

        Button:
